<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DatePicker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--All match_parent_Parent-->
    <style name="all_match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--All match_parent-->
    <style name="alls_match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!--Edit Text Box style-->
    <style name="textView_custom_style1">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/txt_hint_gray</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <!--Edit Text Box style-->
    <style name="textView_custom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/txt_hint_gray</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <!--Edit Text Box style-->
    <style name="textView_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/txt_hint_gray</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_edittext_forgot</item>
    </style>

    <!--Edit Text Login SignUP style-->
    <style name="textView_login_signup_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/txt_hint_gray</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_edittext_edit</item>
    </style>


    <!--Button style-->
    <style name="button_custom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>


    <!--Forgot Password-->

    <!--Edit Text Box style-->
    <style name="textView_forgot_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/txt_hint_gray</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_edittext_forgot</item>
    </style>

    <!--Enter OTP style-->
    <style name="otp_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColorHint">@color/txt_hint_gray</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rounded_edittext_forgot</item>
    </style>


    <!--Menu Relative_Style-->
    <style name="home_relative_style">
        <item name="android:background">#d9d9d9</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>



    <!--Menu Image_Style-->
    <style name="home_image_style">
        <item name="android:background">#d9d9d9</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/calculater</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>



    Result_mosult Relative_Style-->
    <style name="result_relative_style">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    Result_mosult Image_Style-->
    <style name="result_pdf_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/ic_pdf_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    Result_mosult View vertical -->
    <style name="result_view_style_vertical">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/txt_black</item>
    </style>

    Result_mosult View horizontal-->
    <style name="result_view_style_horizontal">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/txt_black</item>
    </style>

    Result_mosult text_Style-->
    <style name="result_text_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>




    <!--Menu text_Style-->
    <style name="home_text_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--Silde Menu text_Style-->
    <style name="side_txt_custom_style">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/txt_white</item>

    </style>

    <!--Silde Menu view_Style-->
    <style name="side_view_custom_style">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@color/txt_white</item>
    </style>


</resources>
