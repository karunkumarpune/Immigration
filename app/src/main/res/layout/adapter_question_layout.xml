<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/txt_questation_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:text="Question 1"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/click_hide_show"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_questation_num"
        android:background="@drawable/round_rect_shape_expandable_up"
        android:gravity="center_vertical"
        android:elevation="1dp">

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="2dp"
            android:text="Today"
            android:textColor="#434343"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/click_hide_show"
        android:orientation="vertical" />
</LinearLayout>