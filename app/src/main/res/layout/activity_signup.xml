<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/login"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_signup_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/skip"
                android:textColor="@color/txt_white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/rounded_edittext_edit"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:paddingLeft="15dp"
                        android:drawableLeft="@drawable/phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.3"
                        android:src="@drawable/phone" />



                    <TextView
                        android:id="@+id/country_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.3"
                        android:text="+1"
                        android:textColor="@color/txt_black"
                        android:textSize="12sp"
                        />

                    <View
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.01"
                        android:layout_height="match_parent"
                        android:background="#8b8b8b"/>


                    <EditText
                        android:drawableLeft="@drawable/dashed_vertical_line"
                        android:id="@+id/txt_signup_mob"
                        android:background="@drawable/rounded_edittext_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:hint="@string/mobile_number"
                        android:inputType="number"
                        android:textColor="@color/txt_black"
                        android:textColorHint="@color/txt_hint_gray"
                        android:maxLength="10"
                        android:textSize="12sp"
                        android:paddingLeft="0dp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/txt_signup_email"
                    style="@style/textView_login_signup_style"
                    android:drawableLeft="@drawable/email"
                    android:hint="@string/enter_email_id"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/txt_signup_pass"
                    style="@style/textView_login_signup_style"
                    android:drawableLeft="@drawable/password"
                    android:hint="@string/password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/txt_signup_conf_pass"
                    style="@style/textView_login_signup_style"
                    android:drawableLeft="@drawable/password"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/txt_signup_check"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX=".8"
                        android:scaleY=".8"
                        />


                    <TextView
                        android:id="@+id/term_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_white"
                        android:textSize="11sp" />


                </LinearLayout>

                <Button
                    android:layout_marginTop="8dp"
                    android:id="@+id/signup_btn"
                    style="@style/button_custom_style"
                    android:text="@string/sign_up" />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/signup_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/signup_"
            android:textColor="@color/txt_white" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
